<main class="container p-4">
    <div class="col-md-4 mx-auto">
        <div class="card text-center">
            <div class="card-header">
                <h3>Modificando Producto</h3>
            </div>
            
            <div class="card-body">
                
                <form action="/product/edit/{{productId._id}}?_method=PUT" method="POST" autocomplete="off">
                <input type="hidden" name="_method" value="PUT">
                    <div class="form-group">
                        <input type="text" name="title" class="form-control" value="{{productId.title}}">
                    </div>
                    <div class="form-group">
                        <input type="text" name="price" class="form-control" value="{{productId.price}}">
                    </div>
                    <div class="form-group">
                        <textarea name="description" class="form-control">{{productId.description}}</textarea>
                    </div>
                    <div class="form-group">
                        {{#if user}}
                        <button class="btn btn-primary btn-block" type="submit">
                            Guardar
                        </button>
                        {{/if}}
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>