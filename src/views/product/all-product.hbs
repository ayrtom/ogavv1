<main class="container-fluid p-4">

    <div class="row row-cols-1 row-cols-md-4 g-4">
        {{#each product}}
        <div class="col">
            <div class="card h-100">
                <div class="padding">
                    <!--Src image path-->
                    <img src="{{image_url}}" class="card-img-top" height="400dp">
                </div>
                <div class="card-body">
                    <!--image title-->
                    <h4 class="card-title text-center fw-bold">
                        {{title}}

                    </h4>
                    <!--image price-->
                    <p class="card-text text-center">${{price}}</p>
                    <!--Delete-->



                    <form action="/product/details/{{_id}}" method="GET">
                        <button type="submit" class="btn btn-primary btn-block btn-sm">
                            Detalles
                        </button>
                    </form>






                </div>
            </div>
        </div>
        {{/each}}
    </div>

</main>