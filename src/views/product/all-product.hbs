<main class="container-fluid p-4">

    <div class="row row-cols-1 row-cols-md-4 g-4">
        {{#each product}}
        <div class="col">
            <div class="card h-100">
                <div class="padding">
                    <!--Src image path-->
                    <img src="{{image_url}}" class="card-img-top" height="400dp">
                </div>
                <div class="card-body">
                    <!--image title-->
                    <div class="base">
                    <h4 class="card-title text-center fw-bold">
                        {{title}}
                        </div>
                    </h4>
                    <!--image price-->
                    <div class="base">
                    <p class="card-text text-center">{{subcategory}}</p>
                    </div>
                    <!--Delete-->
                    <form action="" method="GET">
                          <a href="/product/details/{{_id}}" class="btn btn-primary btn-block btn-sm" type="submit" >Detalles</a>
                       
                    </form>
                </div>
            </div>
        </div>
        {{/each}}
    </div>

</main>